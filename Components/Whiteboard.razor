@using Quarantraining.Data
@inject InMemoryDbService Db

    <div id="whiteboard" class="card flip-card @(CardIsFlipped ? "flip" : "")">
        <div class="flip-card-inner row flex-fill p-0">
            <div class="flip-card-front col d-flex flex-column p-3">
                <div class="row flex-fill">
                    @if (!String.IsNullOrEmpty(Pregame.Description))
                    {
                        <div class="col d-flex flex-column align-content-center border-right">
                            <div class="row justify-content-center">
                                <div class="col-2 d-flex flex-column align-items-beginning">
                                    <svg class="bi bi-clipboard" @onclick="FlipCard" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M4 1.5H3a2 2 0 00-2 2V14a2 2 0 002 2h10a2 2 0 002-2V3.5a2 2 0 00-2-2h-1v1h1a1 1 0 011 1V14a1 1 0 01-1 1H3a1 1 0 01-1-1V3.5a1 1 0 011-1h1v-1z" clip-rule="evenodd" />
                                        <path fill-rule="evenodd" d="M9.5 1h-3a.5.5 0 00-.5.5v1a.5.5 0 00.5.5h3a.5.5 0 00.5-.5v-1a.5.5 0 00-.5-.5zm-3-1A1.5 1.5 0 005 1.5v1A1.5 1.5 0 006.5 4h3A1.5 1.5 0 0011 2.5v-1A1.5 1.5 0 009.5 0h-3z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="col-8 d-flex flex-column align-items-center justify-content-center">
                                    <h4 class="border-bottom pl-3 pr-3 d-flex align-items-center">Pregame</h4>
                                </div>
                                <div class="col-2"></div>
                            </div>
                            <div class="row">
                                <div class="col d-flex flex-column align-items-center" style="white-space: pre-line">
                                    @Pregame.Description
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col d-flex flex-column align-content-center">
                        <div class="row justify-content-center">
                            <div class="col-2 d-flex flex-column align-items-beginning">
                                @if (String.IsNullOrEmpty(Pregame.Description))
                                {
                                    <svg class="bi bi-clipboard" @onclick="FlipCard" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M4 1.5H3a2 2 0 00-2 2V14a2 2 0 002 2h10a2 2 0 002-2V3.5a2 2 0 00-2-2h-1v1h1a1 1 0 011 1V14a1 1 0 01-1 1H3a1 1 0 01-1-1V3.5a1 1 0 011-1h1v-1z" clip-rule="evenodd" />
                                        <path fill-rule="evenodd" d="M9.5 1h-3a.5.5 0 00-.5.5v1a.5.5 0 00.5.5h3a.5.5 0 00.5-.5v-1a.5.5 0 00-.5-.5zm-3-1A1.5 1.5 0 005 1.5v1A1.5 1.5 0 006.5 4h3A1.5 1.5 0 0011 2.5v-1A1.5 1.5 0 009.5 0h-3z" clip-rule="evenodd" />
                                    </svg>
                                }
                            </div>
                            <div class="col-8 d-flex flex-column align-items-center justify-content-center">
                                <h4 class="border-bottom pl-3 pr-3 d-flex align-items-center">@Metcon.Name</h4>
                            </div>
                            <div class="col-2 d-flex flex-column align-items-end">
                                <svg class="@Completed bi bi-check" @onclick="CompletedIconClick" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M13.854 3.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3.5-3.5a.5.5 0 11.708-.708L6.5 10.293l6.646-6.647a.5.5 0 01.708 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex flex-column align-items-center" style="white-space: pre-line">
                                @Metcon.Description
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flip-card-back col d-flex flex-column p-3">
                <div class="row justify-content-center">
                    <div class="col-2 d-flex flex-column align-items-beginning">
                        <svg class="bi bi-card-text" @onclick="FlipCard" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M14.5 3h-13a.5.5 0 00-.5.5v9a.5.5 0 00.5.5h13a.5.5 0 00.5-.5v-9a.5.5 0 00-.5-.5zm-13-1A1.5 1.5 0 000 3.5v9A1.5 1.5 0 001.5 14h13a1.5 1.5 0 001.5-1.5v-9A1.5 1.5 0 0014.5 2h-13z" clip-rule="evenodd" />
                            <path fill-rule="evenodd" d="M3 5.5a.5.5 0 01.5-.5h9a.5.5 0 010 1h-9a.5.5 0 01-.5-.5zM3 8a.5.5 0 01.5-.5h9a.5.5 0 010 1h-9A.5.5 0 013 8zm0 2.5a.5.5 0 01.5-.5h6a.5.5 0 010 1h-6a.5.5 0 01-.5-.5z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="col-8 d-flex flex-column align-items-center justify-content-center">
                        <h4 class="border-bottom pl-2 pr-2 d-flex align-items-center">Notes</h4>
                    </div>
                    <div class="col-2 d-flex flex-column align-items-end">
                    </div>
                </div>
                <div class="row flex-fill">
                    <div class="col d-flex flex-column align-items-center" style="white-space: pre-line">
                        <div class="row flex-fill w-100 justify-content-center">
                            <textarea @bind="WOD.Notes" @onblur="OnNoteBlur" autofocus name="notes" placeholder="All the PRs..."></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@code {

    [Parameter]
    public WOD WOD { get; set; }

    [Parameter]
    public Pregame Pregame { get; set; }

    [Parameter]
    public Metcon Metcon { get; set; }

    [Parameter]
    public string Completed { get; set; }

    private bool CardIsFlipped = false;

    private void CompletedIconClick()
    {
        WOD.Completed = WOD.Completed ? false : true;
        Db.UpdateWOD(WOD);
        Completed = WOD.Completed ? "completed" : "";
    }

    private void OnNoteBlur()
    {
        Db.UpdateWOD(WOD);
    }

    private void FlipCard()
    {
        CardIsFlipped = CardIsFlipped ? false : true;
    }
}
